# Flask Settings
FLASK_APP=web.app
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# Database Settings
DATABASE_URL=sqlite:///data/mindset_data.db

# API Keys (if needed)
WEATHER_API_KEY=your-weather-api-key
FITBIT_API_KEY=your-fitbit-api-key
FITBIT_API_SECRET=your-fitbit-api-secret

# Data Collection Settings
DATA_COLLECTION_INTERVAL=3600
MAX_DATA_POINTS=1000

# Model Settings
MODEL_PATH=models
TRAINING_BATCH_SIZE=32
TRAINING_EPOCHS=100

# Analysis Settings
ANALYSIS_WINDOW=7
MIN_CORRELATION_THRESHOLD=0.3

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=logs/app.log 